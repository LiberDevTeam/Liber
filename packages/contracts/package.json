{
  "name": "contracts",
  "description": "P2P Messenger",
  "version": "0.1.0",
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "@truffle/hdwallet-provider": "^1.4.1",
    "@typechain/truffle-v5": "^5.0.0",
    "dotenv": "^10.0.0"
  },
  "exports": {
    "./build/contracts/*": "./build/contracts/*"
  },
  "devDependencies": {},
  "private": true,
  "scripts": {
    "build:types": "npx typechain --target truffle-v5 --out-dir @types-typechain ./build/contracts/*.json && prettier --write @types-typechain",
    "create:shareddb": "node ./scripts/create-shared-db.js",
    "test": "jest",
    "lint": "run-p lint:js lint:sol",
    "lint:js": "eslint ./**/*.ts",
    "lint:sol": "solhint --fix ./contracts/**/*.sol",
    "migrate:dev": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate",
    "migrate:ropsten": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate --network ropsten",
    "postinstall": "yarn build && yarn build:types",
    "build": "truffle compile",
    "postbuild": "yarn run build:types",
    "test:js": "jest",
    "test:sol": "tsc -p ./tsconfig.test.json --outDir ./test && truffle test",
    "typecheck": "tsc --noEmit"
  }
}
